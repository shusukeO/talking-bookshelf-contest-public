{
  "name": "talking-bookshelf",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "lsof -ti:8080 | xargs kill -9 2>/dev/null || true; cd backend && go run ./cmd/server",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
